{
  "root": true,
  "extends": ["plugin:ember/recommended", "@exeto", "prettier"],
  "plugins": ["ember", "prettier"],
  "rules": {
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "files": ["**/*.js"],
      "excludedFiles": ["app/**", "addon/**", "tests/**"],
      "parserOptions": {
        "sourceType": "script"
      },
      "env": {
        "node": true
      },
      "rules": {
        "strict": ["error", "global"],
        "no-console": "off"
      }
    }
  ]
}
